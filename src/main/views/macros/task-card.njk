{% from "govuk/components/table/macro.njk" import govukTable %}

{% macro taskCard(title, description, dueDate) %}

<div class="govuk-body govuk-!-display-block govuk-!-margin-top-9">

  {{ govukTable({
    caption: title,
    captionClasses: "govuk-table__caption--m",
    firstCellIsHeader: true,
    head: [
    ],
    rows: [
      [
        {
          text: "Description"
        },
        {
          text: description
        }
      ],
      [
        {
          text: "Due Date"
        },
        {
          text: dueDate
        }
      ]
    ]
  }) }}

  <div class="govuk-body govuk-!-display-inline govuk-!-justify-content-flex-end">
    <a href="/edit-task" class="govuk-link govuk-!-margin-right-3">Edit</a>
    <a href="/delete-task" class="govuk-link">Delete</a>
  </div>
</div>

{% endmacro %}

