{% from "govuk/components/table/macro.njk" import govukTable %}

{% macro taskCard(task) %}
  <div class="govuk-body govuk-!-display-block govuk-!-margin-top-9">

    <div class="govuk-task-list__status govuk-!-margin-bottom-3">
      <strong class="govuk-tag govuk-tag--blue">
        {{ task.status }}
      </strong>
    </div>

    {{ govukTable({
      caption: task.title,
      captionClasses: "govuk-table__caption--m",
      firstCellIsHeader: true,
      head: [],
      rows: [
        [
          { text: "Description" },
          { text: task.description }
        ],
        [
          { text: "Due Date" },
          { text: task.dueDate }
        ],
        [
          { text: "Created At" },
          { text: task.createdDate }
        ]
      ]
    }) }}

    <div class="govuk-body govuk-!-display-inline govuk-!-justify-content-flex-end">
      <a href="/tasks/{{ task.id }}/edit" class="govuk-link govuk-!-margin-right-3">Edit</a>
      <a href="/tasks/{{ task.id }}/delete" class="govuk-link">Delete</a>
    </div>
  </div>
{% endmacro %}
